<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <de.phil.astaralgorithm.AStarAlgorithmView
        android:id="@+id/astar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:numTiles="40"
        app:diagonal="false"
        app:showDebugInformation="true" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_tile_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/astar_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/astar_view"
        app:layout_constraintLeft_toRightOf="@id/spinner_tile_types"
        android:text="Debug"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        app:layout_constraintLeft_toRightOf="@id/switch_debug"
        app:layout_constraintTop_toBottomOf="@id/astar_view"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_create_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Grid"
        app:layout_constraintLeft_toRightOf="@id/button_solve"
        app:layout_constraintTop_toBottomOf="@id/astar_view"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_numTiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="10"
        android:progress="20"
        app:layout_constraintTop_toBottomOf="@+id/button_solve" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_percentWalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="90"
        android:min="10"
        android:progress="20"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_numTiles" />

</androidx.constraintlayout.widget.ConstraintLayout>